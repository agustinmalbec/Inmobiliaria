@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<h1>Detalles</h1>

<div>
    <h4>Contrato</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre del inquilino</dt>
        <dd class="col-sm-10">@ViewBag.Inquilino.ToString()</dd>

        <dt class="col-sm-2">Nombre del propietario</dt>
        <dd class="col-sm-10">@ViewBag.Propietario.ToString()</dd>

        <dt class="col-sm-2">Direccion del inmueble</dt>
        <dd class="col-sm-10">@ViewBag.Inmueble.Direccion</dd>

        <dt class="col-sm-2">Desde</dt>
        <dd class="col-sm-10">@Model.Fecha_desde</dd>

        <dt class="col-sm-2">Hasta</dt>
        <dd class="col-sm-10">@Model.Fecha_hasta</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>